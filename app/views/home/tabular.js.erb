$('li > a').click(function() {
  $('li').removeClass();
  $(this).parent().addClass('active');
  if(this.id == 'book'){
    $("#contents").html("<%= escape_javascript(render 'book') %>");
  }else{
    $("#contents").html("<%= escape_javascript(render 'lesson') %>");
  }
});

$('td > a').click(function() {
  $("#contents").append("<%= escape_javascript(render 'book') %>");
});